<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/dialog_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_marginBottom="5dp"

            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.koonat.easyfont.TextView
                        android:layout_weight="4"
                        android:textSize="25sp"
                        android:textColor="#f78970"
                        android:gravity="center"
                        android:text="High Score"
                        android:id="@+id/highscore"
                        android:layout_gravity="center"
                        app:font_path="font/font.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.koonat.easyfont.TextView
                        android:layout_weight="4"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        app:font_path="font/font.ttf"
                        android:textSize="25sp"
                        android:textColor="#f78970"
                        android:text="Easy"
                        android:id="@+id/easylevel"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.koonat.easyfont.TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#f68870"
                        android:gravity="bottom"
                        app:font_path="font/font.ttf"
                        android:textSize="25sp"
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.koonat.easyfont.TextView
                        android:layout_marginRight="15dp"
                        android:gravity="right"
                        android:layout_weight="4"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        app:font_path="font/font.ttf"
                        android:textSize="25sp"
                        android:textColor="#f78970"
                        android:text="250"
                        android:id="@+id/scoreeasy"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.koonat.easyfont.TextView
                        android:layout_weight="4"

                        android:layout_marginLeft="15dp"
                        app:font_path="font/font.ttf"
                        android:textSize="25sp"
                        android:textColor="#f78970"
                        android:text="Medium"
                        android:id="@+id/mediumlevel"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.koonat.easyfont.TextView

                        android:layout_marginBottom="10dp"
                        android:textColor="#f68870"
                        android:gravity="bottom"
                        app:font_path="font/font.ttf"
                        android:textSize="25sp"
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.koonat.easyfont.TextView
                        android:layout_marginRight="15dp"
                        android:gravity="right"
                        android:layout_weight="4"

                        android:layout_marginBottom="10dp"
                        app:font_path="font/font.ttf"
                        android:textSize="25sp"
                        android:textColor="#f78970"
                        android:text="250"
                        android:id="@+id/scoremedium"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.koonat.easyfont.TextView
                        android:layout_weight="4"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        app:font_path="font/font.ttf"
                        android:textSize="25sp"
                        android:textColor="#f78970"
                        android:text="Hard"
                        android:id="@+id/Hardlevel"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.koonat.easyfont.TextView

                        android:layout_marginBottom="10dp"
                        android:textColor="#f68870"
                        android:gravity="bottom"
                        app:font_path="font/font.ttf"
                        android:textSize="25sp"
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.koonat.easyfont.TextView
                        android:layout_marginRight="15dp"
                        android:gravity="right"
                        android:layout_weight="4"

                        android:layout_marginBottom="10dp"
                        app:font_path="font/font.ttf"
                        android:textSize="25sp"
                        android:textColor="#f78970"
                        android:text="250"
                        android:id="@+id/scorehard"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>




            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <ImageView
        android:id="@+id/cross"
       android:layout_alignParentRight="true"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_action_name" />

</RelativeLayout>