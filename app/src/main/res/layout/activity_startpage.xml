<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.rishabh.sumgame.StartpageActivity">
    <ImageView
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

   <LinearLayout
       android:layout_centerInParent="true"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <com.koonat.easyfont.TextView
           android:layout_marginBottom="10dp"
           android:padding="2dp"
           android:textStyle="bold"
           android:textColor="#f78970"
           android:textSize="25sp"
           app:font_path="font/font.ttf"
           android:gravity="center"
           android:text="MY COOL GAME"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <com.airbnb.lottie.LottieAnimationView
           android:layout_marginTop="10dp"
           android:id="@+id/dancingcat"
           android:layout_width="200dp"
           android:layout_height="200dp"
           android:layout_centerHorizontal="true"
           android:layout_gravity="center"
           android:layout_marginBottom="25dp"
           app:lottie_autoPlay="true"
           app:lottie_loop="true"
           app:lottie_rawRes="@raw/dancingcat" />

       <android.support.v7.widget.CardView
           android:layout_marginBottom="20dp"
           app:cardBackgroundColor="#9cb8aa9d"
           app:cardElevation="10dp"
           app:cardCornerRadius="10dp"
           android:layout_marginRight="25dp"
           android:layout_marginLeft="25dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:padding="40dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <com.koonat.easyfont.Button
                   android:id="@+id/start"
                   android:padding="5dp"
                   android:textSize="18sp"
                   android:textColor="#ffffff"
                   android:background="@drawable/stroke"
                   app:font_path="font/font.ttf"
                   android:text="START"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />

               <com.koonat.easyfont.Button
                   android:id="@+id/exit"
                   android:padding="5dp"
                   android:background="@drawable/stroke"
                   android:textSize="18sp"
                   android:textColor="#ffff"
                   android:layout_marginTop="15dp"
                   app:font_path="font/font.ttf"
                   android:text="EXIT"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

               <com.koonat.easyfont.Button
                   android:id="@+id/high"
                   android:padding="5dp"
                   android:background="@drawable/stroke"
                   android:textSize="18sp"
                   android:textColor="#ffff"
                   android:layout_marginTop="15dp"
                   app:font_path="font/font.ttf"
                   android:text="HIGH SCORE"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />





           </LinearLayout>
       </android.support.v7.widget.CardView>

   </LinearLayout>


</RelativeLayout>
